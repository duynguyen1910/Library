<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tấn Duy" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu sách cho bạn khác" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mượn: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStartDay"
                android:text="2024-05-01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="match_parent"
                android:text="Status: "
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:text="Chưa trả"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/bookImageListImv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/product1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đừng Để Nỗi Sợ Cản Đường Bạn"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helen Odessky" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="match_parent"
                            android:text="Quantity: "
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtQuantity"
                            android:layout_width="match_parent"
                            android:text="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/closeDialogBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BFBABA"
            android:text="See more..."
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@null" />




    </LinearLayout>

</androidx.cardview.widget.CardView>